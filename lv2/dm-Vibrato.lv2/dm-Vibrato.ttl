@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix dg:    <http://www.darkglass.com/lv2/ns#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix kx:    <http://kxstudio.sf.net/ns/lv2ext/props#> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix pg:    <http://lv2plug.in/ns/ext/port-groups#> .
@prefix pp:    <http://lv2plug.in/ns/ext/port-props#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .

<urn:darkglass:dm-Vibrato#audiogroup>
	a pg:MonoGroup, pg:Group ;
	lv2:symbol "audio" ;
	lv2:name "Audio" .

<urn:darkglass:dm-Vibrato>
	a lv2:Plugin , lv2:ModulatorPlugin ;
	dg:abbreviation "VIB" ;
	doap:name "Vibrato" ;
	doap:license <http://spdx.org/licenses/GPL-3.0.html> ;
	doap:developer [
		foaf:name "Dave Mollen" ;
		foaf:homepage <https://github.com/davemollen/dm-Vibrato> ;
	] ;
	doap:maintainer [
		foaf:name "Darkglass" ;
		foaf:homepage <https://www.darkglass.com/> ;
		foaf:mbox <mailto:contact@darkglass.com> ;
	] ;
	rdfs:comment """
A mono vibrato effect.
""" ;
	lv2:optionalFeature lv2:hardRTCapable ;
	lv2:port [
		a lv2:AudioPort, lv2:InputPort ;
		lv2:index 0 ;
		lv2:symbol "input" ;
		lv2:name "Input" ;
		lv2:designation pg:center ;
		pg:group <urn:darkglass:dm-Vibrato#audiogroup>
	] , [
		a lv2:AudioPort, lv2:OutputPort ;
		lv2:index 1 ;
		lv2:symbol "output" ;
		lv2:name "Output" ;
		lv2:designation pg:center ;
		pg:group <urn:darkglass:dm-Vibrato#audiogroup>
	], [
		a lv2:InputPort, lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "enabled" ;
		lv2:name "Enabled" ;
		lv2:designation lv2:enabled ;
		lv2:portProperty lv2:toggled ;
		lv2:default 1.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
	], [
		a lv2:InputPort, lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "reset" ;
		lv2:name "Reset" ;
		lv2:designation kx:Reset ;
		lv2:portProperty lv2:toggled, pp:trigger ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
	], [
		a lv2:InputPort, lv2:ControlPort ;
		lv2:index 4 ;
		lv2:symbol "rate" ;
		lv2:name "Rate" ;
		lv2:portProperty pp:logarithmic ;
		lv2:default 5.0 ;
		lv2:minimum 0.1 ;
		lv2:maximum 20.0 ;
		units:unit units:hz
	], [
		a lv2:InputPort, lv2:ControlPort ;
		lv2:index 5 ;
		lv2:symbol "depth" ;
		lv2:name "Depth" ;
		lv2:default 33.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 100.0 ;
		units:unit units:pc
	], [
		a lv2:InputPort, lv2:ControlPort ;
		lv2:index 6 ;
		lv2:symbol "shape" ;
		lv2:name "Shape" ;
		lv2:portProperty lv2:integer;
		lv2:portProperty lv2:enumeration ;
		lv2:default 1 ;
		lv2:minimum 1 ;
		lv2:maximum 2 ;
		lv2:scalePoint [rdfs:label "Sine"; rdf:value 1];
		lv2:scalePoint [rdfs:label "Triangle"; rdf:value 2];
		# lv2:scalePoint [rdfs:label "Saw Up"; rdf:value 3];
		# lv2:scalePoint [rdfs:label "Saw Down"; rdf:value 4];
		# lv2:scalePoint [rdfs:label "Square"; rdf:value 5];
	] .
